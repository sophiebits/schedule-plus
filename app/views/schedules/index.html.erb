<% title "Schedules" %>

<table>
  <tr>
    <th>Student</th>
    <th>Course</th>
  </tr>
  <% for schedule in @schedules %>
    <tr>
      <td><%= schedule.student_id %></td>
      <td><%= schedule.course_id %></td>
      <td><%= link_to "Show", schedule %></td>
      <td><%= link_to "Edit", edit_schedule_path(schedule) %></td>
      <td><%= link_to "Destroy", schedule, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Schedule", new_schedule_path %></p>

<p>
<% if current_user %>
  Welcome <%= current_user.name %>!
	<%= current_user.inspect %>
	<%= session.inspect %>
	<%= fb_user.friends %>
<% else %>
  <%= link_to "Sign in with Facebook", "/auth/facebook" %>
<% end %>
</p>